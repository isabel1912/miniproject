/* components/remove/remove.wxss */
.remove {
  position: relative;
  width: 100%;
  height: 150rpx;
  line-height: 150rpx;
  border-bottom: 1rpx solid #eee;
  background: #fff;
  text-indent: 20rpx;
}

.remove .item {
  position: absolute;
  top: 0;
  left: 150rpx;
  width: calc(100% - 135rpx);
  height: 100%;
  background: #fff;
  z-index: 2
}

.remove image {
  position: absolute;
  top: 15rpx;
  left: 15rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  z-index: 1;
}

.remove .text {
  position: absolute;
  top: 0;
  right: 0;
  width: 100rpx;
  height: 150rpx;
  line-height: 150rpx;
  background: #000;
  text-align: center;
  font-size: 12px;
  color: #fff;
  z-index: 1;
}